<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/email_type_bg"
    android:orientation="vertical" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mail_type_titlebar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/actionbar_height"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/mail_type_home_back"
            style="@style/ActionBarHomeLogo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/actionbar_height"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:paddingLeft="4dp"
            android:src="@drawable/ic_title_home" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/actionbar_height"
            android:layout_toRightOf="@id/mail_type_home_back"
            android:gravity="center"
            android:singleLine="true"
            android:text="邮箱设置          "
            android:textColor="#F8F8F8"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="60px"
        android:paddingTop="40dp"
        android:text="请选择邮箱类型:"
        android:textColor="#000000"
        android:textSize="32px" />

    <ListView
        android:id="@+id/type_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/round_bg"
        android:cacheColorHint="#00000000"
        android:divider="#C0C0C0"
        android:dividerHeight="1dp" />

</LinearLayout>