<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp" >

    <RelativeLayout
        android:id="@+id/menu_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:gravity="center" >

        <net.ysng.reader.MenuImageView
            android:id="@+id/main_local"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"   
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:scaleType="matrix"
            android:src="@drawable/local_1" >
        </net.ysng.reader.MenuImageView>

        <net.ysng.reader.MenuImageView
            android:id="@+id/main_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/main_local"
            android:layout_alignLeft="@id/main_local"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="matrix"
            android:src="@drawable/scan_1" >
        </net.ysng.reader.MenuImageView>

        <net.ysng.reader.MenuImageView
            android:id="@+id/main_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/main_local"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@id/main_local"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:scaleType="matrix"
            android:src="@drawable/settings_1" >
        </net.ysng.reader.MenuImageView>

        <net.ysng.reader.MenuImageView
            android:id="@+id/main_recent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/main_scan"
            android:layout_alignLeft="@id/main_local"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:scaleType="matrix"
            android:src="@drawable/recent_1" >
        </net.ysng.reader.MenuImageView>

        <net.ysng.reader.MenuImageView
            android:id="@+id/main_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/main_settings"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@id/main_local"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="matrix"
            android:src="@drawable/search_1" >
        </net.ysng.reader.MenuImageView>
    </RelativeLayout>

</RelativeLayout>