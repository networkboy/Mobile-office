<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/read_text_titlebar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/actionbar_height"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/read_text_homeBtn"
            style="@style/ActionBarHomeLogo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/actionbar_height"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:paddingLeft="4dp"
            android:src="@drawable/ic_title_home" />

        <TextView
            android:id="@+id/read_text_file_name"
            android:layout_width="200dp"
            android:layout_height="@dimen/actionbar_height"
            android:layout_toRightOf="@id/read_text_homeBtn"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="4dp"
            android:singleLine="true"
            android:textColor="#F8F8F8"
            android:textSize="16sp" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <EditText
                android:id="@+id/read_text_contents"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@null"
                android:textSize="18sp" />
        </ScrollView>

        <ImageButton
            android:id="@+id/read_text_screenshortbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:src="@drawable/screenshot_btnbg"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>